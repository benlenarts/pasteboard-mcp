{
  "name": "pasteboard-mcp",
  "version": "1.0.0",
  "description": "MCP server for macOS pasteboard access â€” text, images, and custom types",
  "type": "module",
  "bin": {
    "pasteboard-mcp": "dist/bundle.mjs"
  },
  "scripts": {
    "build:swift": "mkdir -p build && swiftc swift/pbhelper.swift -o build/pbhelper",
    "build:ts": "tsc && node esbuild.config.js",
    "build": "npm run build:swift && npm run build:ts && chmod +x dist/bundle.mjs",
    "prepare": "npm run build",
    "cc-install": "claude mcp add pasteboard -- node \"$PWD/dist/bundle.mjs\"",
    "cc-uninstall": "claude mcp remove pasteboard",
    "pack": "npm run build && npx @anthropic-ai/mcpb pack . pasteboard.mcpb"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
